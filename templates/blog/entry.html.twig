{% extends "base.html.twig" %}

{% block title %}Article{% endblock %}

{% block body %}
    <div class="container" style="background-color: #FFFFFF ; margin-bottom: 100px">
        <div class="blog-header" >
            <h1 class="blog-post-title" style="text-align: center">{{ blogPost.title }}</h1>
            <div class="blog-post-meta"  style="text-align: center; font-weight: lighter; font-style: italic;">
                {{ blogPost.getUpdatedAt|date('F j, Y') }}
            </div>
        </div>

        <div class="container" style="background-color: #FFFFFF; ">



            <div class="blog-post" style="margin: 70px">
                <p>{{ blogPost.body|raw }}</p>
            </div>

            <div class="blog-post-meta"  style="text-align: center; font-weight: lighter; font-style: italic;">
                Article rédigé par : {{ blogPost.author.name }}
            </div>


        </div>
    </div>
{% endblock %}